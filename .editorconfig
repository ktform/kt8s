root = true

[*]
charset = utf-8
end_of_line = lf
max_line_length = 180
trim_trailing_whitespace = false

[*.bat]
end_of_line = crlf

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{kt,kts}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true
max_line_length = 140
